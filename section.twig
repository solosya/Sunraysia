{{ set(this, 'title', _Blog.getBlogTitle()) }}
{% set networkData = _Network.getNetworkData() %}
{% set site        = networkData.title | lower | split(" ")[0]%}
{% set blogData     = _Blog.getBlog() %}
{% set config       = _Network.getThemeConfig() %}



{% set limit = 18 %}

{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}
{% set firstCount = articles | length %}


{% set popularArticles = _Article.getPopularArticles({ limit: 4, sortBy: 'VIEWS', scope: 'network' }) %}
{# {% set recentArticles = _Article.getRecentArticles({ limit: 4}) %} #}




<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = _AppHelper.getApplicationEnv() == 'DEV' ? 0 : 0 %}
{% set popCount = _AppHelper.getApplicationEnv() == 'DEV' ? 0 : 0 %}
{% set dev = _AppHelper.getApplicationEnv() == 'DEV' ? false : false %}




<main id="main" class="site-main u-margin-top-60 u-margin-bottom-60" role="main" data-article-limit="{{limit}}" data-article-count="{{articles | length}}">

    <div class="container">

        <div class="row">
            <div class="col-12">
                <h1 class="c-section-header">{{ _Blog.getBlogTitle() }}</h1>
            </div>
        </div>


        <div class="row">
            <div class="col-12 col-lg-9">
                
                <div class="row">
                    <div class="col-12 col-lg-8">
                        {{this.render('partials/_single-article.twig', {
                            article: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 740, height: 360},
                            containerClass: "card-5-mobile card-5-tablet card-5-desktop"
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        {{this.render('partials/_single-article.twig', {
                            article: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 740, height: 360},
                            containerClass: "card-4-mobile card-2-tablet card-2-desktop"
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    </div>

                    <div class="col-12 col-md-6 col-lg-12">
                        {{this.render('partials/_single-article.twig', {
                            article: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 740, height: 360},
                            containerClass: "card-4-mobile card-2-tablet card-3-desktop card-3-desktop-lg"
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    </div>
                </div>
            </div>

            
            <div class="col-12 col-lg-3">

                {{this.render('partials/_single-article.twig', {
                    article: articles[articleCount], 
                    position: (articleCount+1),
                    imageSize: {width: 360, height: 270},
                    containerClass: "card-4-mobile card-3-tablet card-2-desktop"
                }) | raw}}
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
 
            </div>


        </div>

        <div class="row">
            <div class="col-12 col-lg-3">
                {{this.render('partials/_single-article.twig', {
                    article: articles[articleCount], 
                    position: (articleCount+1),
                    imageSize: {width: 360, height: 270},
                    containerClass: "card-1-mobile card-3-tablet card-1-desktop"
                }) | raw}}
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
            </div>

            <div class="col-12 col-lg-9">

                {{this.render('partials/_single-article.twig', {
                    article: articles[articleCount], 
                    position: (articleCount+1),
                    imageSize: {width: 360, height: 270},
                    containerClass: "card-4-mobile card-3-tablet card-3-desktop card-3-desktop-lg"
                }) | raw}}
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}

            </div>
        </div>
        <div class="row">
            
            <div class="col-md-6 col-lg-3">
                <div class="c-news-feed">
                    <div class="c-news-feed__title">Most popular</div>
                    <ul class="row c-news-feed__list">

                        {% for i in 0..3 if popularArticles[i] %}
                                <li class="col-sm-12">
                                    {{this.render('/partials/_single-article.twig', {
                                        article: popularArticles[i], 
                                        imageSuppress: true,
                                        containerClass: "card-6-mobile card-6-tablet card-6-desktop"
                                    }) | raw}}
                                </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            {% for i in 0..2 if articles[articleCount] %}
                <div class="col-md-6 col-lg-3">
                {{this.render('partials/_single-article.twig', {
                    article: articles[articleCount], 
                    position: (articleCount+1),
                    imageSize: {width: 360, height: 270},
                    containerClass: "card-1-mobile card-1-tablet card-1-desktop"
                }) | raw}}
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                </div>
            {% endfor %}

        </div>









        <div class="row">
                {% for i in 0..7 if articles[articleCount] %}
                    <div class="col-12 col-md-6 col-lg-3">
                    {{this.render('partials/_single-article.twig', {
                        article: articles[articleCount], 
                        position: (articleCount+1),
                        imageSize: {width: 360, height: 270},
                        containerClass: "card-4-mobile card-2-tablet card-2-desktop"
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    </div>
                {% endfor %}
        </div>


        <div class="row">
            <div class="col-12">

                {{this.render('/partials/_section-loadmore.twig', {
                    sectionNumber: "02", 
                    cardClass: "col-12 col-lg-3 card-4-mobile card-2-tablet card-2-desktop card-2-desktop-lg",
                    cardCount: 9,
                    limit: 8
                }) | raw}}
                </div>
        </div>


    </div>
    <div class="j-keyword-cont" data-keywords="{{blogData.keywords}}"></div>
</main>




