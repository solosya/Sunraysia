{% set page = _Page.getPageData(slug) %}
{% set config       = _Network.getThemeConfig() %}

{{ set(this, 'title', page.title | raw) }}


<!-- Begin Container -->
<div class="" style="height:100%">
    <section class="container" style="height:100%">
        <!-- Begin Terms -->
        <div class="content-wrap" style="height:100%">
            <div class="row" style="height:100%">
                <div class="offset-lg-1 col-9 col-lg-6" style="height:100%">
                    <div class="c-article__container">
                        {{page.content | raw}}
                    </div>
                </div>
                <div class="col-9 col-lg-3">
                    {% if config['inventory']['adSpace']['side-fix'][0] is defined %}
                        <div class="j-adslot" id="{{config['inventory']['adSpace']['side-fix'][0]}}" data-adshape="side-fix"></div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    <div class="j-keyword-cont" data-keywords="{{page.keywords}}"></div>
</div>