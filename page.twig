{% set page = _Page.getPageData(slug) %}
{% set config       = _Network.getThemeConfig() %}

{{ set(this, 'title', page.title | raw) }}


<!-- Begin Container -->
<div class="">
    <section class="container">
        <!-- Begin Terms -->
        <div class="content-wrap">
            <div class="row">
                <div class="col-12 offset-md-1 col-md-9 col-lg-6">
                    <div class="c-article__container u-mobile-margin-top-30">
                        {{page.content | raw}}
                    </div>
                </div>
                <div class="col-9 col-lg-3">
                    {% if config['inventory']['adSpace']['side-fix'][0] is defined %}
                        <div class="j-adslot" id="{{config['inventory']['adSpace']['side-fix'][0]}}" data-adshape="side-fix"></div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    <div class="j-keyword-cont" data-keyword="{{page.keywords}}" data-pageName="{{page.title}}" data-pageType="page" data-pageTag=""></div>
</div>