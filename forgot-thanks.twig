{# empty Twig template #}
{{ set(this, 'title', "Thank You") }}
{% set config       = _Network.getThemeConfig() %}
<div class="login-page">
    <div class="container">
        <div class="tab-content">
            <div class="row">
                <div class="col-9 col-lg-6 text-center">
                    <p class="helper-text">Your reset password email has been sent successfully.</p>
                    <a href="{{_AppHelper.getLoginUrl()}}" class="button green">Back to login</a>
                </div>
                <div class="col-9 col-lg-3">
                    {% if config['inventory']['adSpace']['side-fix'][0] is defined %}
                        <div class="j-adslot" id="{{config['inventory']['adSpace']['side-fix'][0]}}" data-adshape="side-fix"></div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>